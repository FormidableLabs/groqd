{
  "name": "groq-builder",
  "version": "0.1.2",
  "license": "MIT",
  "author": {
    "name": "Formidable",
    "url": "https://formidable.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FormidableLabs/groqd"
  },
  "homepage": "https://github.com/formidablelabs/groqd",
  "keywords": [
    "sanity",
    "groq",
    "query",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": [
      {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./dist/index.js"
    ],
    "./validation": [
      {
        "types": "./dist/validation/index.d.ts",
        "default": "./dist/validation/index.js"
      },
      "./dist/validation/index.js"
    ],
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "validation"
  ],
  "scripts": {
    "test:watch": "vitest",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc --project tsconfig.build.json",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@sanity/client": "^3.4.1",
    "groq-js": "^1.1.9",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.4",
    "vitest": "^0.28.5"
  },
  "engines": {
    "node": ">= 14"
  },
  "publishConfig": {
    "provenance": true
  }
}
